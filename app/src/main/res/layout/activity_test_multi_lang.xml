<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/statusbar_white"
    android:orientation="vertical">

    <!--blocksDescendants：viewgroup会覆盖子类控件而直接获得焦点-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/statusbar_blue">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16px"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/header_back" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/multi_lang"
            android:textColor="#ffffff"
            android:textSize="36px"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_system"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_user"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="36px"

            android:text="跟随系统"
            android:textColor="@color/login_reg_email"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/iv_check_system"
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_marginRight="36px"
            android:src="@drawable/list_ope_grasp" />

        <View
            style="@style/DividerHorizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_lang_zh"
        android:layout_width="match_parent"
        android:layout_height="116px"

        android:background="@drawable/btn_user"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="36px"
            android:text="简体中文"
            android:textColor="@color/login_reg_email"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/iv_zh_lang"
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_marginRight="36px"
            android:src="@drawable/list_ope_grasp" />
        <View
            style="@style/DividerHorizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_love_go"
        android:layout_width="match_parent"
        android:layout_height="116px"

        android:background="@drawable/btn_user"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="36px"

            android:text="English"
            android:textColor="@color/login_reg_email"
            android:textSize="30px" />

        <ImageView

            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_marginRight="36px"
            android:src="@drawable/list_ope_grasp" />

        <View
            style="@style/DividerHorizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px" />
    </RelativeLayout>


</LinearLayout>
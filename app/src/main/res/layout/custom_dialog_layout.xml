<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <!--colorwhite-->


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="340px"
        android:layout_centerVertical="true"
        android:background="@drawable/llinear"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50px"
            android:paddingLeft="46px"
            android:text="@string/send_success"
            android:textColor="@color/login_reg_font"
            android:textSize="40px" />


        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46px"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/login_reg_email" />

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="60px"

            />
        <!--       android:layout_marginBottom="15px"-->


        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/btn_dialog"
            android:gravity="center"
            android:text="@string/confirm2"
            android:textColor="@color/longin_bgnom"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
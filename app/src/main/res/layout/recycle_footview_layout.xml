<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_verify"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/ll_check_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_check"
                style="@style/CustomCheckboxTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:focusable="false"
                android:paddingLeft="10px"
                android:text="@string/i_is_grasp"
                android:textColor="#1b82d2"
                android:textSize="28px" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_download"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="#f8f9fa"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_loadImage"
                android:layout_width="46px"
                android:layout_height="46px"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/bottom_go_logo" />

            <TextView
                android:id="@+id/tv_load_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/download_home"
                android:textSize="22px"

                />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>